{
  "manifest_version": 3,
  "name": "ReadIt Web Text Reader",
  "description": "Select text on any webpage and listen instantly. Free, private, and works offline.",
  "version": "1.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "ReadIt Web Text Reader"
  }
}
